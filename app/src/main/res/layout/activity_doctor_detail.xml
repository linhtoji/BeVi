<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_doctor_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.linht.bevi.methods.detail.DoctorDetail"
    >
  <include
      layout="@layout/tool_bar"
      android:layout_width="match_parent"
      android:layout_height="?attr/actionBarSize"
      />

  <TextView

      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"
      android:layout_marginBottom="30dp"
      android:gravity="center"
      android:text="please wait a few minute!"
      android:id="@+id/wait"
      />
  <TextView
      android:layout_below="@id/toolbar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"
      android:layout_marginTop="25dp"
      android:gravity="center"
      android:text="@string/yourNumber"
      android:textSize="25sp"
      />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_above="@+id/wait"
      android:orientation="horizontal"
      android:gravity="center"
      android:layout_alignParentEnd="true"
      android:layout_alignParentRight="true"
      android:layout_centerVertical="true"
      android:layout_marginBottom="15dp"
      >
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Current order: "
        android:textSize="20sp"
        />
    <TextView
        android:id="@+id/currentOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        />
  </LinearLayout>
  <TextView
      android:id="@+id/userOrder"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:text="0"
      android:textColor="@color/colorPrimaryDark"
      android:textSize="100sp"
      android:textStyle="bold"
      android:layout_marginTop="130dp"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"
      />

</RelativeLayout>
